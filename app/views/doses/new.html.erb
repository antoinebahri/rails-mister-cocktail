<h1>Add ingredients to <%= @cocktail.name %></h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%=f.hidden_field :cocktail_id, value: params[:cocktail_id] %>
  <%= f.submit "Add ingredient", class: "btn btn-primary" %>
<% end %>
<%= link_to "Go back", cocktail_path(@cocktail) %>
